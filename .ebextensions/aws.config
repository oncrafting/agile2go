files:
  "/etc/yum.repos.d/mongodb.repo":
    mode: "000644"
    owner: root
    group: root
    content: |
      [MongoDB]
      name=MongoDB Repository
      baseurl=http://downloads-distro.mongodb.org/repo/redhat/os/x86_64
      gpgcheck=0
      enabled=1
      "/opt/elasticbeanstalk/hooks/appdeploy/enact/98_newrelic_sysmond.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
          #!/usr/bin/env bash
          sudo yum -y update
          sudo yum install -y mongo-10gen-server
          sudo echo '/usr/bin/mongos -configdb $MONGO_CONFIG_IPS -fork -logpath /var/log/mongo/mongos.log --logappend' > /etc/init.d/mongos.sh
          sudo chmod +x /etc/init.d/mongos.sh
          sudo bash /etc/init.d/mongos.sh
