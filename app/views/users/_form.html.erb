<div class="ui one column page grid">
  <div class="ui grid">
    <header class="row">
    <div class="sixteen wide column">
      <div class="ui segment">
        <h1>Sign Up</h1>
      </div>
    </div>
    </header>
    <div class="row">
      <div class="sixteen wide column"></div>
      <div class="eight wide column">
        <div class="ui form segment">
          <%= form_for @user do |f| %>
            <%= display_base_errors @user %>
            <div class="field">
              <%= f.label :name %>
              <div class="ui left labeled icon input">
                <%= f.text_field :name, placeholder: 'Name'  %>
                <i class="user icon"></i>
                <%= label_asterisk %>
              </div>
            </div>
            <div class="field">
              <%= f.label :email %>
              <div class="ui left labeled icon input">
                <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
                <i class="mail icon"></i>
                <%= label_asterisk %>
              </div>
            </div>
            <div class="field">
              <%= f.label :password %>
              <div class="ui left labeled icon input"> 
                <%= f.password_field :password, placeholder: "Password" %>
                <i class="lock icon"></i>
                <%= label_asterisk %>
              </div>
            </div>
            <div class="field">
              <%= f.label :password_confirmation %>
              <div class="ui left labeled icon input">
                <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
                <i class="lock icon"></i>
                <%= label_asterisk %>
              </div>
            </div>
            <div class="inline field">
              <div class="ui checkbox">
                <input type="checkbox">
                <label>I agree to the Terms and Conditions</label>
              </div>
            </div>
            <%= f.submit 'Sign Up', class: 'ui orange submit button large right floated' %>
          <% end %>
          <div class="ui horizontal clearing divider">Or</div>
          <div class="ui fluid large facebook button">
            <i class="facebook icon"></i>
            Facebook
          </div>
          <div class="ui fluid large twitter button">
            <i class="twitter icon"></i>
            Twitter
          </div>
          <div class="ui fluid large google plus button">
            <i class="google plus icon"></i>
            Google
          </div>
        </div>
      </div>
      <div class="eight wide column">
        <div class="ui segment">
          <div class="row">
            <div class="sixteen wide column">
              <h1 class="delta">Alredy have an account?</h1>
              <p>We're happy you like Jarbaz so much, you may want to login!</p>
            </div>
          </div>
          <div class="row">
            <div class="sixteen wide center aligned column">
              <div class="ui teal button large">
                <%= link_to 'Sign In', new_user_sessions_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
