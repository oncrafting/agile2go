<div class="ui one column page grid">
  <div class="ui grid">
    <div class="row">
      <div class="six wide column"></div>
      <div class="eight wide column" style="margin-top: 20px;">
        <a class="ui teal icon huge button" href="#sprints/new">Add New Sprint</a>
      </div>
    </div>
    <div class="row">
      <div class="sixteen wide column">
      <table class="ui table segment">
      <thead>
        <tr>
          <th>{{ t 'sprint.name' }}</th>
          <th>{{ t 'sprint.points' }}</th>
          <th>{{ t 'sprint.daily' }}</th>
          <th>{{ t 'sprint.finishing_at' }}</th>
          <th>{{ t 'actions' }}</th>
        </tr>
      </thead>
      <tbody>
      {{#each this}}
        <tr>
          <td>{{ name }}</td>
          <td>{{ points }}</td>
          <td><span>{{ daily }}</span></td>
          <td>{{ prettyDate created_at }}</td>
          <td>
            <a class="edit-button" href="#sprints/{{ id }}/edit">
              <i class="edit large icon"></i>
            </a>
            <a id="{{ id }}" class="edit-button" href="javascript:void(0);">
              <i class="icon large remove confirm"></i>
            </a>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
  </div>
</div>
