<div class="ui one column page grid">
  <div class="ui grid">
    <div class="row">
      <div class="three wide column"></div>
      <div class="ten wide column">
        <div class="ui attached info message">
          <div class="header">
            Have you heard about our mailing list?
          </div>
          <p>Get all the best inventions in your e-mail every day. Register your company now!</p>
        </div>
        <div class="ui form attached fluid segment">
          <form>
            <div class="two fields">
              <div id="name_input" class="field">
                <label>{{ t 'project.name' }}</label>
                <div class="ui left labeled icon input">
                  <input type="text" id="name" value="{{ model.name }}" placeholder="{{ t 'project.name' }}">
                  <div class="ui corner label">
                    <i class="icon asterisk"></i>
                  </div>
                </div>
              </div>
              <div id="company_input" class="field">
                <label>{{ t 'project.company' }}</label>
                <div class="ui left labeled icon input">
                  <input type="text" id="company" value="{{ model.company }}" placeholder="{{ t 'project.company' }}">
                  <div class="ui corner label">
                    <i class="icon asterisk"></i>
                  </div>
                </div>
              </div>
            </div>
            <div id="description_input" class="field">
              <label>{{ t 'project.description'}}</label>
              <div class="ui left labeled icon input">
                <textarea cols="40" rows="20" id="description" placeholder="Description">{{ model.description }}</textarea>
                <div class="ui corner label">
                  <i class="icon asterisk"></i>
                </div>
              </div>
            </div>
            <div class="field">
              <label>{{ t 'user.title.other' }}</label>
              <select multiple>
                {{# each users }}
                  <option value="{{ this.id }}">{{ this.name }}</opition>
                {{/each }}
              </select>
            </div>
            <div class="ui blue submit button large right floated" type="submit">{{ t 'save' }}</div>
            <a href="#projects" class="ui right large floated button">{{ t 'back' }}</a>
          <form>
        <div>
      </div>
    </div>
  </div>
</div>
